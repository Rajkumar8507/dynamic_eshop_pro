@model IEnumerable<dynamic_eshop_pro.Models.Employee>

@{
    ViewBag.Title = "Employee List";
}

<h2>Employee List</h2>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().DepartmentId)</th>
            <th>@Html.DisplayNameFor(model => model.First().phoneNo)</th>
            <th>@Html.DisplayNameFor(model=>model.First().departmentName)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.DepartmentId</td>
                <td>@employee.phoneNo</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = employee.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = employee.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = employee.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
